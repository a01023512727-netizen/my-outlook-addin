<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appshere/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" xsi:type="MailApp">
  <Id>a1234567-b890-c123-d456-e7890f123456</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>MyLocalTool</ProviderName>
  <DefaultLocale>ko-KR</DefaultLocale>
  <DisplayName DefaultValue="구글 시트 연동앱" />
  <Description DefaultValue="구글 시트 데이터를 고정해서 보여줍니다."/>
  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>
  <DefaultSettings>
    <SourceLocation DefaultValue="https://a01023512727-netizen.github.io/my-outlook-addin/taskpane.html" />
  </DefaultSettings>
  <Permissions>ReadItem</Permissions>
  <Rule xsi:type="RuleCollection" Mode="And">
    <Rule xsi:type="ItemIs" ItemType="Message" />
  </Rule>
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="Mailbox">
        <DesktopFormFactor>
          <SupportsPinning>true</SupportsPinning>
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="groupLabel" />
                <Control xsi:type="Button" id="msgReadOpenPaneButton">
                  <Label resid="paneButtonLabel" />
                  <Supertip>
                    <Title resid="paneButtonLabel" />
                    <Description resid="paneButtonDesc" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon" />
                    <bt:Image size="32" resid="icon" />
                    <bt:Image size="80" resid="icon" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="taskpaneUrl" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="icon" DefaultValue="https://cdn-icons-png.flaticon.com/512/281/281760.png" />
      </bt:Images>
      <bt:Urls>
        <bt:Url id="taskpaneUrl" DefaultValue="https://YOUR_ID.github.io/my-outlook-addin/taskpane.html" />
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="groupLabel" DefaultValue="데이터 도구" />
        <bt:String id="paneButtonLabel" DefaultValue="시트 열기" />
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="paneButtonDesc" DefaultValue="구글 시트 데이터를 사이드바에 고정합니다." />
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
